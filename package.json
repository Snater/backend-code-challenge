{
  "name": "be-code-challenge",
  "version": "1.0.0",
  "description": "GAN Integrity backend code challenge",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:server:express": "node ./dist/express/index.js",
    "start:server:koa": "node ./dist/koa/index.js",
    "build": "run-s compile copy-public",
    "compile": "npx tsc",
    "copy-public": "copyfiles src/public/** dist -u 1",
    "deploy:express": "run-s build start:server:express",
    "deploy:koa": "run-s build start:server:koa",
    "dev:express": "run-s build watch:express",
    "dev:koa": "run-s build watch:koa",
    "lint": "npx eslint . --max-warnings=0",
    "test": "jest",
    "watch:express": "run-p watch:ts watch:node:express",
    "watch:koa": "run-p watch:ts watch:node:koa",
    "watch:node:express": "nodemon ./dist/express/index.js",
    "watch:node:koa": "nodemon ./dist/koa/index.js",
    "watch:ts": "npx tsc --watch"
  },
  "author": "GAN Integrity + Snater",
  "license": "ISC",
  "dependencies": {
    "cabin": "^13.2.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-joi-validation": "^5.0.1",
    "fs-extra": "^11.1.1",
    "joi": "^17.11.0",
    "koa": "^2.14.2",
    "koa-joi-router": "^8.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.7.0",
    "signale": "^1.4.0",
    "spherical": "^0.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/koa": "^2.13.10",
    "@types/koa-joi-router": "^8.0.6",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.7",
    "@types/signale": "^1.4.6",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "babel-jest": "^29.7.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.51.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2"
  },
  "nodemonConfig": {
    "ext": "js"
  }
}
