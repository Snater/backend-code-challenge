{
  "name": "be-code-challenge",
  "version": "1.0.0",
  "description": "GAN Integrity backend code challenge",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:server:bun": "bun ./dist/bun",
    "start:server:express": "node ./dist/express",
    "start:server:koa": "node ./dist/koa",
    "build": "run-s compile copy-public",
    "build:bun": "run-s compile:bun copy-public",
    "compile": "npx tsc",
    "compile:bun": "bun build ./src/bun --outdir=dist --target=bun",
    "copy-public": "copyfiles src/public/** dist -u 1",
    "deploy:bun": "run-s build:bun start:server:bun",
    "deploy:express": "run-s build start:server:express",
    "deploy:koa": "run-s build start:server:koa",
    "dev:bun": "bun --watch ./src/bun",
    "dev:express": "run-s build watch:express",
    "dev:koa": "run-s build watch:koa",
    "lint": "npx eslint . --max-warnings=0",
    "test": "jest && bun test ./src/bun/app.test.ts",
    "watch:express": "run-p watch:ts watch:node:express",
    "watch:koa": "run-p watch:ts watch:node:koa",
    "watch:node:express": "nodemon ./dist/express/index.js",
    "watch:node:koa": "nodemon ./dist/koa/index.js",
    "watch:ts": "npx tsc --watch"
  },
  "author": "GAN Integrity + Snater",
  "license": "ISC",
  "dependencies": {
    "@koa-better-modules/joi-router": "^12.0.0",
    "bun": "^1.1.27",
    "cabin": "^13.2.8",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-joi-validation": "^5.0.1",
    "fs-extra": "^11.2.0",
    "joi": "^17.13.3",
    "koa": "^2.15.3",
    "lodash": "^4.17.21",
    "node-fetch": "^2.7.0",
    "signale": "^1.4.0",
    "spherical": "^0.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.10.0",
    "@stylistic/eslint-plugin": "^2.8.0",
    "@types/bun": "^1.1.9",
    "@types/co-body": "^6.1.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.5.4",
    "@types/signale": "^1.4.7",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.10.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.0.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.1-alpha.6"
  },
  "nodemonConfig": {
    "ext": "js"
  }
}
