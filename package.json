{
  "name": "be-code-challenge",
  "version": "1.0.0",
  "description": "GAN Integrity backend code challenge",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:server:express": "node ./dist/express/index.js",
    "start:server:koa": "node ./dist/koa/index.js",
    "build": "run-s compile copy-public",
    "compile": "npx tsc",
    "copy-public": "copyfiles src/public/** dist -u 1",
    "deploy:express": "run-s build start:server:express",
    "deploy:koa": "run-s build start:server:koa",
    "dev:express": "run-s build watch:express",
    "dev:koa": "run-s build watch:koa",
    "lint": "npx eslint . --max-warnings=0",
    "test": "jest",
    "watch:express": "run-p watch:ts watch:node:express",
    "watch:koa": "run-p watch:ts watch:node:koa",
    "watch:node:express": "nodemon ./dist/express/index.js",
    "watch:node:koa": "nodemon ./dist/koa/index.js",
    "watch:ts": "npx tsc --watch"
  },
  "author": "GAN Integrity + Snater",
  "license": "ISC",
  "dependencies": {
    "cabin": "^13.2.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-joi-validation": "^5.0.1",
    "fs-extra": "^11.2.0",
    "joi": "^17.13.1",
    "koa": "^2.15.3",
    "koa-joi-router": "^8.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.7.0",
    "signale": "^1.4.0",
    "spherical": "^0.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-typescript": "^7.24.1",
    "@eslint/js": "^9.2.0",
    "@stylistic/eslint-plugin": "^2.1.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.15.0",
    "@types/koa-joi-router": "^8.0.7",
    "@types/lodash": "^4.17.1",
    "@types/node": "^20.12.12",
    "@types/signale": "^1.4.7",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0-alpha.10"
  },
  "nodemonConfig": {
    "ext": "js"
  }
}
